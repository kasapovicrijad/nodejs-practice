<%- include ("includes/head.ejs") %>
<link rel="stylesheet" href="/css/nav.css">
<link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <%- include ("includes/nav.ejs") %>
    <form class="form" action="/admin/add-product" method="post">
        <h1 class="form__header">Add new product</h1>
        <div class="form__controll">
            <label for="title">Title</label>
            <input type="text" placeholder="title" name="title">
        </div>
        <div class="form__controll">  
            <label for="imgUrl">Image URL</label>
            <input type="text" name="" placeholder="imgurl" name="imgUrl"></div>
        <div class="form__controll">
            <label for="description">Description</label>
            <textarea name="description" placeholder="description" id="" cols="30" rows="10"></textarea>
        </div>
        <div class="form__controll">
            <label for="price">Price</label>
            <input type="number" placeholder="price" name="price">
        </div>
        
        <div class="form__action"><button type="submit">Add product</button></div>

    </form>
</body>
</html>